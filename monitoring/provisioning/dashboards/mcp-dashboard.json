{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Avg Response Time",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "avg(mcp_request_latency_seconds_sum) / avg(mcp_request_latency_seconds_count)",
          "legendFormat": "avg"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Total Requests",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum(mcp_requests_total)",
          "legendFormat": "total"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Total Errors",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "sum(mcp_request_errors_total)",
          "legendFormat": "errors"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Request Latency Histogram (count)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum by (le) (rate(mcp_request_latency_seconds_bucket[5m]))",
          "legendFormat": "{{le}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "p95 latency by endpoint (5m)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le,endpoint) (rate(mcp_request_latency_seconds_bucket[5m])))",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Requests by endpoint (5m rate)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(mcp_requests_total[5m]))",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Errors by endpoint (5m rate)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(mcp_request_errors_total[5m]))",
          "legendFormat": "{{endpoint}}"
        }
      ]
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
