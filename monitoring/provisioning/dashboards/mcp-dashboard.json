{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["mcp"],
  "timezone": "",
  "title": "MCP Server Dashboard",
  "version": 2,
  "templating": {
    "list": [
      {
        "name": "endpoint",
        "label": "Endpoint",
        "type": "query",
        "hide": 0,
        "datasource": "Prometheus",
        "refresh": 1,
        "query": {
          "query": "label_values(mcp_requests_total, endpoint)",
          "refId": "VarEndpoint"
        },
        "multi": true,
        "includeAll": true,
        "allValue": ".+",
        "current": { "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h"]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Target Up",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "targets": [{ "expr": "max(up{job=\"fastmcp-server\"})" }],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": []
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Requests/s (5m)",
      "gridPos": { "h": 4, "w": 5, "x": 4, "y": 0 },
      "targets": [{ "expr": "sum(rate(mcp_requests_total[5m]))" }],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "type": "stat",
      "title": "Error Rate % (5m)",
      "gridPos": { "h": 4, "w": 5, "x": 9, "y": 0 },
      "targets": [
        {
          "expr": "100 * sum(rate(mcp_request_errors_total[5m])) / clamp_min(sum(rate(mcp_requests_total[5m])), 1e-9)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "type": "stat",
      "title": "Avg Latency (5m)",
      "gridPos": { "h": 4, "w": 5, "x": 14, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(mcp_request_latency_seconds_sum[5m])) / clamp_min(sum(rate(mcp_request_latency_seconds_count[5m])), 1e-9)"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Requests",
      "gridPos": { "h": 4, "w": 5, "x": 19, "y": 0 },
      "targets": [{ "expr": "sum(mcp_requests_total)" }],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "type": "graph",
      "title": "Latency Quantiles (p50/p90/p95/p99)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(mcp_request_latency_seconds_bucket[5m])))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.90, sum by (le) (rate(mcp_request_latency_seconds_bucket[5m])))",
          "legendFormat": "p90"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(mcp_request_latency_seconds_bucket[5m])))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(mcp_request_latency_seconds_bucket[5m])))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "type": "heatmap",
      "title": "Latency Histogram Heatmap (5m)",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 12 },
      "targets": [
        { "expr": "sum by (le) (rate(mcp_request_latency_seconds_bucket[5m]))" }
      ],
      "options": { "legend": { "show": true } }
    },
    {
      "type": "bargauge",
      "title": "Requests by Endpoint (5m)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 },
      "targets": [
        { "expr": "sum by (endpoint) (rate(mcp_requests_total[5m]))" }
      ],
      "options": { "orientation": "horizontal", "displayMode": "lcd" }
    },
    {
      "type": "bargauge",
      "title": "Error Rate by Endpoint % (5m)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 },
      "targets": [
        {
          "expr": "100 * (sum by (endpoint) (rate(mcp_request_errors_total[5m])) / clamp_min(sum by (endpoint) (rate(mcp_requests_total[5m])), 1e-9))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green" },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "options": { "orientation": "horizontal", "displayMode": "basic" }
    },
    {
      "type": "graph",
      "title": "Requests vs Errors (rate 5m)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 30 },
      "targets": [
        {
          "expr": "sum(rate(mcp_requests_total[5m]))",
          "legendFormat": "requests/s"
        },
        {
          "expr": "sum(rate(mcp_request_errors_total[5m]))",
          "legendFormat": "errors/s"
        }
      ]
    },
    {
      "type": "graph",
      "title": "p95 Latency by Endpoint (5m)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 38 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le,endpoint) (rate(mcp_request_latency_seconds_bucket[5m])))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    }
  ]
}
